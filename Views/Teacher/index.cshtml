@model IEnumerable<MVC_WEB_APP.Models.Teacher>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-8">
            <h2 class="text-primary">Teacher List</h2>
        </div>
        <form asp-controller="Teacher" asp-action="Index">
        <p>
            Name : <input type="text" name="SearchString" />
            <input type="submit" value="Filter">
        </p>
    </form>  

        <a asp-controller="Teacher" asp-action="Edit" class="btn btn-primary">
            Create New Teacher
        </a>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Teacher Name</th>
                    <th>Subject</th>
                    <th>Credits</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj1 in Model)
                {
                    <tr>
                        <td width="50%">@obj1.Teacher_name</td>
                        <td>@obj1.Subject</td>
                        <td>@obj1.credits</td>
                        <td><a class="btn btn-primary" asp-route-id="@obj1.TeacherId" asp-controller="Teacher" asp-action="Edit">Edit</a>
                        <a class="btn btn-primary" asp-route-id="@obj1.TeacherId" asp-controller="Teacher" asp-action="Delete">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Teacher details.</p>
    }
</div>

